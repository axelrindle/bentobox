{
    "explorer.autoRevealExclude": {
        "**/node_modules": true,
        "**/vendor": true,
        "resources/js/actions": true,
        "resources/js/routes": true,
        "resources/js/wayfinder": true,
    },

    "explorer.fileNesting.enabled": true,
    "explorer.fileNesting.expand": false,
    "explorer.fileNesting.patterns": {
        ".env.local": ".env.*",
        "package.json": "bun.lock, components.json, *.js, *.mjs, *.ts, tsconfig.json",
        "composer.json": "composer.lock, phpunit.xml, pint.json",
        "docker-compose.yml": ".dockerignore, .actrc",
        "README.md": "LICENSE",
        ".gitignore": ".gitattributes"
    },

    "workbench.colorCustomizations": {
        "titleBar.activeBackground": "#e30613",
        "titleBar.activeForeground": "#ffed00",
        "statusBarItem.remoteBackground": "#e30613",
        "statusBarItem.remoteForeground": "#ffed00"
    },

    "eslint.format.enable": true,
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "vue"
    ],
    "eslint.probe": [
        "astro",
        "civet",
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
        "html",
        "mdx",
        "vue",
        "markdown",
        "json",
        "jsonc"
    ],

    "editor.defaultFormatter": null,
    "editor.linkedEditing": true,

    "typescript.preferences.quoteStyle": "single",
    "typescript.format.semicolons": "remove",
    "typescript.preferences.importModuleSpecifierEnding": "js",
    "typescript.preferences.importModuleSpecifier": "non-relative",
    "[typescript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        },
    },
    "[vue]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.eslint": "explicit"
        },
    },

    "commitlint.log.enabled": true,
    "commitlint.config.file": "commitlint.config.ts",
    "conventionalCommits.emojiFormat": "emoji",
    "conventionalCommits.autoCommit": false,

    "i18n-ally.localesPaths": [
        "lang"
    ],
    "conventionalCommits.scopes": [
        "devcontainer"
    ],
    "vue.inlayHints.missingProps": true,
}
