{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["./resources/js/*"],
        },
        "types": [
            "vite/client",
            "./resources/js/types"
        ],

        "verbatimModuleSyntax": false,
        "jsx": "preserve",
        "jsxImportSource": "vue",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment"
    },
    "include": [
        "resources/js/**/*.d.ts",
        "resources/js/**/*.ts",
        "resources/js/**/*.tsx",
        "resources/js/**/*.vue"
    ]
}
